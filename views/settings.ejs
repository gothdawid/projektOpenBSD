<!DOCTYPE html>
<html>
<head>
  <title>Ustawienia</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <style>
    .form-check-label {
      margin-left: 1rem;
    }
  </style>
</head>
<body>
  <%- include('navbar.ejs') %>

  <div class="container mt-4">
    <h1>Ustawienia</h1>
    <form action="/settings" method="POST">
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <label for="hostname">Nazwa hosta</label>
            <input type="text" class="form-control" id="hostname" name="hostname" value="<%= hostname %>" required>
          </div>
          <div class="form-group">
            <label for="lanAddress">Adres sieci LAN</label>
            <input type="text" class="form-control" id="lanAddress" name="lanAddress" value="<%= lanAddress %>" required>
          </div>
          <h4 class="mt-4">Serwisy</h4>
          <div class="form-row row">
            <div class="col-sm-4">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="dhcpEnabled" name="dhcpEnabled" <%= dhcpEnabled ? 'checked' : '' %>>
                <label class="form-check-label" for="dhcpEnabled">DHCP</label>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="dnsEnabled" name="dnsEnabled" <%= dnsEnabled ? 'checked' : '' %>>
                <label class="form-check-label" for="dnsEnabled">DNS</label>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="sambaEnabled" name="sambaEnabled" <%= sambaEnabled ? 'checked' : '' %>>
                <label class="form-check-label" for="sambaEnabled">SAMBA</label>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="mysqlEnabled" name="mysqlEnabled" <%= mysqlEnabled ? 'checked' : '' %>>
                <label class="form-check-label" for="mysqlEnabled">MySQL</label>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="nginxEnabled" name="nginxEnabled" <%= nginxEnabled ? 'checked' : '' %>>
                <label class="form-check-label" for="nginxEnabled">Nginx</label>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="sshEnabled" name="sshEnabled" <%= sshEnabled ? 'checked' : '' %>>
                <label class="form-check-label" for="sshEnabled">SSH</label>
              </div>
            </div>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary mt-3">Zapisz</button>
    </form>
  </div>

  <%- include('footer.ejs') %>

</body>
</html>
